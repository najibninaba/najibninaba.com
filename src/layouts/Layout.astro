---
const { title, description, ogImage } = Astro.props as {
	title?: string;
	description?: string;
	ogImage?: string;
};

const defaultTitle = 'Najib Ninaba â€” AI Infrastructure and Platforms Engineering Leader';
const defaultDesc =
	'Head of Platforms Engineering at AI Singapore. 24+ years in Artificial Intelligence (AI), High Performance Computing (HPC) and cloud infrastructure.';
const pageTitle = title ?? defaultTitle;
const pageDesc = description ?? defaultDesc;
---

<!doctype html>
<html lang="en">
	<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="generator" content={Astro.generator} />

	<title>{pageTitle}</title>
	<meta name="description" content={pageDesc} />
	<meta name="robots" content="index,follow" />

	<!-- Open Graph -->
	<meta property="og:title" content={pageTitle} />
	<meta property="og:description" content={pageDesc} />
	<meta property="og:type" content="website" />
	<meta property="og:site_name" content="Najib Ninaba" />
	{ogImage && <meta property="og:image" content={ogImage} />}

	<!-- Twitter -->
	<meta name="twitter:card" content="summary_large_image" />
	<meta name="twitter:title" content={pageTitle} />
	<meta name="twitter:description" content={pageDesc} />
	{ogImage && <meta name="twitter:image" content={ogImage} />}

	<!-- Theming -->
	<meta name="color-scheme" content="dark light" />
	<meta name="theme-color" content="#0b0b0b" />
	</head>
	<body>
	<slot />
	</body>
</html>

<style>
	:root {
	--bg: #0b0b0b;
	--fg: #eaeaea;
	--muted: #a1a1a1;
	--panel: #121212;
	--border: #1c1c1c;
	--accent: #8b5cf6;

	--maxw: 760px;
	--radius: 12px;
	--shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
	}

	html,
	body {
	height: 100%;
	}

	body {
	margin: 0;
	background: var(--bg);
	color: var(--fg);
	font-family:
		ui-sans-serif,
		system-ui,
		-apple-system,
		Segoe UI,
		Roboto,
		"Helvetica Neue",
		Arial,
		"Noto Sans",
		"Apple Color Emoji",
		"Segoe UI Emoji",
		"Segoe UI Symbol";
	line-height: 1.6;
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
	color-scheme: dark light;
	}

	/* Typography */
	h1,
	h2,
	h3 {
	line-height: 1.25;
	letter-spacing: -0.01em;
	margin: 0 0 0.5rem 0;
	}

	h1 {
	font-size: clamp(2rem, 6vw, 3.25rem);
	font-weight: 700;
	}

	h2 {
	font-size: clamp(1.25rem, 3vw, 1.75rem);
	font-weight: 600;
	margin-top: 2rem;
	}

	h3 {
	font-size: clamp(1.05rem, 2.2vw, 1.25rem);
	font-weight: 600;
	}

	p {
	margin: 0 0 1rem 0;
	}

	small {
	color: var(--muted);
	}

	/* Links */
	a {
	color: inherit;
	text-decoration: none;
	border-bottom: 1px solid transparent;
	transition: border-color 0.2s ease-out, color 0.2s ease-out;
	}

	a:hover {
	border-color: currentColor;
	}

	/* Media */
	img,
	svg,
	video {
	max-width: 100%;
	height: auto;
	}

	/* Utilities */
	.container {
	max-width: var(--maxw);
	margin: 0 auto;
	padding: 0 1rem;
	}

	.panel {
	background: var(--panel);
	border: 1px solid var(--border);
	border-radius: var(--radius);
	box-shadow: var(--shadow);
	}

	/* Subtle reveal animation hooks (opt-in) */
	.reveal {
	opacity: 0;
	transform: translateY(8px);
	transition: opacity 0.6s ease, transform 0.6s ease;
	}

	.reveal.is-visible {
	opacity: 1;
	transform: none;
	}

	@media (prefers-reduced-motion: reduce) {
	.reveal {
		opacity: 1 !important;
		transform: none !important;
		transition: none !important;
	}
	}

	/* Focus styles for accessibility */
	:focus-visible {
	outline: 2px solid var(--accent);
	outline-offset: 2px;
	}

	::selection {
	background: #2b1d61;
	color: #fff;
	}
</style>
