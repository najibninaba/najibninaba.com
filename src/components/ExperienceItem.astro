---
import type { ExperienceItem as Experience } from '../data/site';

interface Props {
  item: Experience;
}

const { item } = Astro.props as Props;
---

<article class="xp panel reveal">
  <h3 class="title">
    {item.title}
    {item.org && <span class="org">, {item.org}</span>}
  </h3>
  {item.period && <div class="period">{item.period}</div>}
  <p class="summary">{item.summary}</p>
  {Array.isArray(item.highlights) && item.highlights.length > 0 && (
    <ul class="highlights">
      {item.highlights.map((h) => <li>{h}</li>)}
    </ul>
  )}
</article>

<style>
  .xp {
    padding: clamp(0.9rem, 1.8vw, 1.25rem);
  }

  /* Vertical rhythm between multiple items */
  .xp + .xp {
    margin-top: 1rem;
  }

  .title {
    margin: 0;
    font-size: clamp(1.05rem, 2.2vw, 1.25rem);
    font-weight: 600;
    letter-spacing: -0.005em;
    line-height: 1.25;
  }

  .org {
    color: var(--muted);
    font-weight: 500;
  }

  .period {
    margin: 0.25rem 0 0.6rem;
    font-size: 0.9rem;
    color: var(--muted);
  }

  .summary {
    margin: 0;
  }

  .highlights {
    margin: 0.6rem 0 0 1.1rem;
    padding: 0;
  }

  .highlights li {
    margin: 0.25rem 0;
  }
</style>