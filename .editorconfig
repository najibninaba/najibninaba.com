# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Web files
[*.{js,jsx,ts,tsx,astro,html,css,scss,sass,less,json,yaml,yml,md}]
indent_style = space
indent_size = 2

# Configuration files
[*.{toml,ini,cfg,conf}]
indent_style = space
indent_size = 2

# Package files
[{package.json,package-lock.json,pnpm-lock.yaml,yarn.lock}]
indent_style = space
indent_size = 2

# Python files (if any)
[*.py]
indent_style = space
indent_size = 4

# Makefiles
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

# Shell scripts
[*.{sh,bash,zsh,fish}]
indent_style = space
indent_size = 2

# Markdown files allow trailing whitespace (for line breaks)
[*.md]
trim_trailing_whitespace = false

# Windows batch files
[*.{bat,cmd,ps1}]
end_of_line = crlf